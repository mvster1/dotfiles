# terminal emulator
alt + @t
	kitty

# program launcher
alt + @e
	rofi -show drun -show-icons -font "Martian Mono Condensed 12"

# make sxhkd reload its configuration files:
control + alt + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
control + alt + {q,r}
	bspc {quit,wm -r}

# close window/node
alt + q
	bspc node -c

# swap nodes
alt + u
	bspc node -s next.local

# kill app & window
super + alt + k
	bspc node -k

# goto desktop 1-10
super + 1
	bspc desktop -f ^1
super + 2
	bspc desktop -f ^2
super + 3
	bspc desktop -f ^3
super + 4
	bspc desktop -f ^4
super + 5
	bspc desktop -f ^5
super + 6
	bspc desktop -f ^6
super + 7
	bspc desktop -f ^7
super + 8 
	bspc desktop -f ^8

# go to next desktop
alt + k
	bspc desktop -f next

# go to previous desktop
alt + j
	bspc desktop -f prev

# alternate between the tiled and monocle layout 
alt + z
	bspc desktop -l next

# move window to next desktop
alt + shift + k
	bspc node -d next

# move window to previous desktop
alt + shift + j
	bspc node -d prev

# set the window state
alt + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# focus the next/previous node in the current desktop
alt + Tab
	bspc node -f {next}.local

# move a floating window
super + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# expand/contract a window 
super + shift + {h,j,k,l}
  bspc node -z {left -20 0 || bspc node -z right -20 0, \
                bottom 0 20 || bspc node -z top 0 20,\
                top 0 -20 || bspc node -z bottom 0 -20,\
                right 20 0 || bspc node -z left 20 0}
